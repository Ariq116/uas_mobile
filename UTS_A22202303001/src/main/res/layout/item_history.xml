<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    android:padding="12dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >


        <!-- Nomor Order & Tanggal -->
        <TextView
            android:id="@+id/tvNomorOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order -TRX000000001 - 2024-06-17"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>

        <!-- Alamat -->
        <TextView
            android:id="@+id/tvAlamatOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alamat: Jl. Mawar No.10"
            android:textSize="14sp"
            android:textColor="#444444"
            android:layout_marginTop="4dp" />

        <!-- Kota & Provinsi -->
        <TextView
            android:id="@+id/tvKotaProvinsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Semarang, Jawa Tengah"
            android:textSize="14sp"
            android:textColor="#444444" />

        <!-- Subtotal & Ongkir -->
        <TextView
            android:id="@+id/tvSubtotalOngkir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subtotal: Rp50.000 | Ongkir: Rp10.000"
            android:textSize="14sp"
            android:textColor="#444444" />

        <!-- Total -->
        <TextView
            android:id="@+id/tvTotalBayar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Bayar: Rp60.000"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>

        <!-- Metode & Estimasi -->
        <TextView
            android:id="@+id/tvMetodeEstimasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pembayaran: COD | Estimasi: 2-3 Hari"
            android:textSize="14sp"
            android:textColor="#444444" />

        <!-- Status -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Sedang Diproses"
            android:textStyle="italic"
            android:textColor="#215BC8"
            android:layout_marginTop="4dp" />

        <!-- Tombol Upload Bukti -->
        <Button
            android:id="@+id/btnUploadBukti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Bukti"
            android:textColor="#FFFFFF"
            android:backgroundTint="#F6DC43"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="16dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>