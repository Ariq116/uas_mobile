<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellowjordan"
    tools:context=".ui.profile.KontakKamiFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_kontak_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kontak Kami"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp" />

            <!-- Card Konten -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/bg_card"
                android:elevation="4dp"
                android:layout_marginBottom="24dp">

                <!-- Alamat -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alamat:"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/location"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tv_alamat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Jl. Erlangga Barat 7 no. 5D, Pleburan,\nKec. Semarang Selatan, Kota Semarang,\nJawa Tengah 50241"
                        android:textSize="14sp"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <!-- Telepon -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telepon:"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/phone"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tv_wa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+62 811-9221-196"
                        android:textSize="14sp"
                        android:textColor="@android:color/black" />
                </LinearLayout>
            </LinearLayout>

            <!-- Tombol: hanya tampilkan "Lihat Lokasi Toko" -->
            <Button
                android:id="@+id/btn_lihat_lokasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lihat Lokasi Toko"
                android:background="@drawable/btn_outline_blue"
                android:textColor="#F6DC43"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
